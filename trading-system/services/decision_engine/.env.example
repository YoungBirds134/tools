# Environment variables for Decision Engine Service
# Copy this file to .env and update the values

# Service Configuration
SERVICE_NAME=decision_engine
SERVICE_VERSION=1.0.0
PORT=8004
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://decision_user:decision_pass@localhost:5432/decision_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/4
REDIS_PASSWORD=
REDIS_DB=4
REDIS_MAX_CONNECTIONS=20

# External Services
# Technical Analysis Service
TECHNICAL_ANALYSIS_URL=http://localhost:8002
TECHNICAL_ANALYSIS_TIMEOUT=30

# Prediction Service
PREDICTION_SERVICE_URL=http://localhost:8003
PREDICTION_SERVICE_TIMEOUT=30

# Market Data Service
MARKET_DATA_URL=http://localhost:8001
MARKET_DATA_TIMEOUT=10

# Risk Management Service
RISK_MANAGEMENT_URL=http://localhost:8005
RISK_MANAGEMENT_TIMEOUT=15

# Order Management Service
ORDER_MANAGEMENT_URL=http://localhost:8000
ORDER_MANAGEMENT_TIMEOUT=20

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Vietnamese Market Configuration
DEFAULT_MARKET=HOSE
TRADING_TIMEZONE=Asia/Ho_Chi_Minh

# Trading Sessions
MORNING_SESSION_START=09:00
MORNING_SESSION_END=11:30
AFTERNOON_SESSION_START=13:00
AFTERNOON_SESSION_END=15:00

# Decision Engine Settings
DEFAULT_STRATEGY=balanced
MAX_POSITION_SIZE_PERCENT=5.0
MAX_SECTOR_EXPOSURE_PERCENT=20.0
MAX_DAILY_TRADES=10

# Signal Weights
TECHNICAL_ANALYSIS_WEIGHT=0.4
PREDICTION_MODEL_WEIGHT=0.3
MARKET_SENTIMENT_WEIGHT=0.2
RISK_MANAGEMENT_WEIGHT=0.1

# Risk Thresholds
MAX_PORTFOLIO_VAR=0.05
MAX_SINGLE_POSITION_RISK=0.02
STOP_LOSS_PERCENT=5.0
TAKE_PROFIT_PERCENT=10.0

# Decision Confidence Thresholds
MIN_CONFIDENCE_TO_TRADE=0.6
HIGH_CONFIDENCE_THRESHOLD=0.8
VERY_HIGH_CONFIDENCE_THRESHOLD=0.9

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Monitoring and Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9004
HEALTH_CHECK_INTERVAL=30

# Caching
DECISION_CACHE_TTL=3600
SIGNAL_CACHE_TTL=300
MARKET_CONTEXT_CACHE_TTL=60

# Background Tasks
DECISION_CLEANUP_INTERVAL=3600
METRICS_COLLECTION_INTERVAL=60
RULE_VALIDATION_INTERVAL=300

# Logging
LOG_FORMAT=json
LOG_FILE=/var/log/decision_engine.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=RequestException

# Feature Flags
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_ML_MODELS=true
ENABLE_ADVANCED_RULES=true

# Performance
MAX_CONCURRENT_DECISIONS=50
DECISION_TIMEOUT_SECONDS=30
BATCH_PROCESSING_SIZE=20

# Backup and Recovery
DECISION_HISTORY_RETENTION_DAYS=90
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
