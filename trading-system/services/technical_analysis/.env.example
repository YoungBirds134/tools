# Technical Analysis Service - Environment Configuration
# Copy this file to .env and update with your actual values

# Environment Configuration
TECHNICAL_ANALYSIS_ENVIRONMENT=development
TECHNICAL_ANALYSIS_DEBUG=true

# Application Configuration
TECHNICAL_ANALYSIS_APP_NAME="Technical Analysis API"
TECHNICAL_ANALYSIS_APP_VERSION="1.0.0"

# Server Configuration
TECHNICAL_ANALYSIS_HOST=0.0.0.0
TECHNICAL_ANALYSIS_PORT=8002
TECHNICAL_ANALYSIS_WORKERS=1
TECHNICAL_ANALYSIS_RELOAD=true

# External Services
TECHNICAL_ANALYSIS_MARKET_DATA_URL=http://localhost:8001

# Technical Analysis Configuration
TECHNICAL_ANALYSIS_DEFAULT_PERIODS={"sma_short": 5, "sma_medium": 20, "sma_long": 50, "ema_short": 12, "ema_long": 26, "rsi": 14, "macd_fast": 12, "macd_slow": 26, "macd_signal": 9, "bb_period": 20, "stochastic": 14, "adx": 14, "williams_r": 14, "cci": 20}
TECHNICAL_ANALYSIS_MAX_HISTORY_DAYS=1000
TECHNICAL_ANALYSIS_MIN_DATA_POINTS=50
TECHNICAL_ANALYSIS_CACHE_TTL=300

# Pattern Recognition Configuration
TECHNICAL_ANALYSIS_ENABLE_PATTERNS=true
TECHNICAL_ANALYSIS_PATTERN_LOOKBACK=10

# Support/Resistance Configuration
TECHNICAL_ANALYSIS_SR_PERIODS=20
TECHNICAL_ANALYSIS_SR_TOLERANCE=0.02

# Database Configuration
TECHNICAL_ANALYSIS_DATABASE_URL=postgresql://technical_user:secure_password@localhost:5432/technical_analysis
TECHNICAL_ANALYSIS_DATABASE_POOL_SIZE=10
TECHNICAL_ANALYSIS_DATABASE_ECHO=false

# Redis Configuration
TECHNICAL_ANALYSIS_REDIS_URL=redis://localhost:6379
TECHNICAL_ANALYSIS_REDIS_DB=2
TECHNICAL_ANALYSIS_REDIS_PASSWORD=
TECHNICAL_ANALYSIS_REDIS_MAX_CONNECTIONS=20

# Kafka Configuration
TECHNICAL_ANALYSIS_KAFKA_BOOTSTRAP_SERVERS=["localhost:9092"]
TECHNICAL_ANALYSIS_KAFKA_TOPIC_PREFIX=technical_analysis
TECHNICAL_ANALYSIS_KAFKA_CONSUMER_GROUP=technical_analysis_group

# Logging Configuration
TECHNICAL_ANALYSIS_LOG_LEVEL=INFO
TECHNICAL_ANALYSIS_LOG_JSON=true
TECHNICAL_ANALYSIS_LOG_FILE=logs/technical_analysis.log

# Rate Limiting
TECHNICAL_ANALYSIS_RATE_LIMIT_REQUESTS=1000
TECHNICAL_ANALYSIS_RATE_LIMIT_WINDOW=60

# HTTP Client Configuration
TECHNICAL_ANALYSIS_HTTP_TIMEOUT=30
TECHNICAL_ANALYSIS_HTTP_MAX_CONNECTIONS=100
TECHNICAL_ANALYSIS_HTTP_RETRIES=3

# Circuit Breaker Configuration
TECHNICAL_ANALYSIS_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
TECHNICAL_ANALYSIS_CIRCUIT_BREAKER_TIMEOUT=60

# Monitoring Configuration
TECHNICAL_ANALYSIS_ENABLE_METRICS=true
TECHNICAL_ANALYSIS_METRICS_PORT=9092

# CORS Configuration
TECHNICAL_ANALYSIS_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
TECHNICAL_ANALYSIS_ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
TECHNICAL_ANALYSIS_ALLOWED_HEADERS=["*"]

# Feature Flags
TECHNICAL_ANALYSIS_ENABLE_ANALYSIS=true
TECHNICAL_ANALYSIS_ENABLE_BACKTESTING=true
TECHNICAL_ANALYSIS_ENABLE_ALERTS=true
TECHNICAL_ANALYSIS_ENABLE_AUDIT_LOGGING=true
TECHNICAL_ANALYSIS_ENABLE_PERFORMANCE_LOGGING=true

# Chart Configuration
TECHNICAL_ANALYSIS_CHART_WIDTH=800
TECHNICAL_ANALYSIS_CHART_HEIGHT=600

# Optimization Configuration
TECHNICAL_ANALYSIS_MAX_CONCURRENT=10
TECHNICAL_ANALYSIS_CALCULATION_TIMEOUT=300
