# Market Data Ingestion Service - Environment Configuration
# Copy this file to .env and update with your actual values

# Environment Configuration
MARKET_DATA_ENVIRONMENT=development
MARKET_DATA_DEBUG=true

# Application Configuration
MARKET_DATA_APP_NAME="Market Data Ingestion API"
MARKET_DATA_APP_VERSION="1.0.0"

# Server Configuration
MARKET_DATA_HOST=0.0.0.0
MARKET_DATA_PORT=8001
MARKET_DATA_WORKERS=1
MARKET_DATA_RELOAD=true

# SSI FastConnect API Configuration
# Get these from SSI Securities
MARKET_DATA_CONSUMER_ID=your_consumer_id_here
MARKET_DATA_CONSUMER_SECRET=your_consumer_secret_here
MARKET_DATA_PRIVATE_KEY=your_base64_private_key_here
MARKET_DATA_PUBLIC_KEY=your_base64_public_key_here

# SSI API URLs (usually don't need to change)
MARKET_DATA_FC_TRADING_URL=https://fc-tradeapi.ssi.com.vn/
MARKET_DATA_FC_DATA_URL=https://fc-data.ssi.com.vn/
MARKET_DATA_FC_STREAM_URL=https://fc-datahub.ssi.com.vn/

# Market Data Configuration
MARKET_DATA_SYMBOLS=["VN30", "VIC", "VCB", "FPT", "HPG", "TCB", "MSN", "BID"]
MARKET_DATA_REFRESH_INTERVAL=5
MARKET_DATA_ENABLE_REAL_TIME=true

# Database Configuration
MARKET_DATA_DATABASE_URL=postgresql://market_user:secure_password@localhost:5432/market_data
MARKET_DATA_DATABASE_POOL_SIZE=10
MARKET_DATA_DATABASE_ECHO=false

# Redis Configuration
MARKET_DATA_REDIS_URL=redis://localhost:6379
MARKET_DATA_REDIS_DB=1
MARKET_DATA_REDIS_PASSWORD=
MARKET_DATA_REDIS_MAX_CONNECTIONS=20

# Kafka Configuration
MARKET_DATA_KAFKA_BOOTSTRAP_SERVERS=["localhost:9092"]
MARKET_DATA_KAFKA_TOPIC_PREFIX=market_data
MARKET_DATA_KAFKA_CONSUMER_GROUP=market_data_group

# Logging Configuration
MARKET_DATA_LOG_LEVEL=INFO
MARKET_DATA_LOG_JSON=true
MARKET_DATA_LOG_FILE=logs/market_data.log

# Rate Limiting
MARKET_DATA_RATE_LIMIT_REQUESTS=200
MARKET_DATA_RATE_LIMIT_WINDOW=60

# HTTP Client Configuration
MARKET_DATA_HTTP_TIMEOUT=30
MARKET_DATA_HTTP_MAX_CONNECTIONS=100
MARKET_DATA_HTTP_RETRIES=3

# Circuit Breaker Configuration
MARKET_DATA_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
MARKET_DATA_CIRCUIT_BREAKER_TIMEOUT=60

# Monitoring Configuration
MARKET_DATA_ENABLE_METRICS=true
MARKET_DATA_METRICS_PORT=9091

# CORS Configuration
MARKET_DATA_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
MARKET_DATA_ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
MARKET_DATA_ALLOWED_HEADERS=["*"]

# Feature Flags
MARKET_DATA_ENABLE_DATA_COLLECTION=true
MARKET_DATA_ENABLE_REAL_API=false
MARKET_DATA_ENABLE_AUDIT_LOGGING=true
MARKET_DATA_ENABLE_PERFORMANCE_LOGGING=true

# Data Storage Configuration
MARKET_DATA_RETENTION_DAYS=365
MARKET_DATA_COMPRESSION_ENABLED=true
