# Trading System Configuration - Enhanced Version
# Copy this file to .env and update with your actual values

# Environment Configuration
TRADING_ENVIRONMENT=development
TRADING_DEBUG=true

# Application Configuration
TRADING_APP_NAME="FC Trading API"
TRADING_APP_VERSION="1.0.0"

# Server Configuration
TRADING_HOST=0.0.0.0
TRADING_PORT=8000
TRADING_WORKERS=1
TRADING_RELOAD=true

# SSI FastConnect API Configuration
# Get these from SSI Securities
TRADING_CONSUMER_ID=your_consumer_id_here
TRADING_CONSUMER_SECRET=your_consumer_secret_here
TRADING_PRIVATE_KEY=your_base64_private_key_here
TRADING_PUBLIC_KEY=your_base64_public_key_here

# SSI API URLs (usually don't need to change)
TRADING_FC_TRADING_URL=https://fc-tradeapi.ssi.com.vn/
TRADING_FC_DATA_URL=https://fc-data.ssi.com.vn/
TRADING_FC_TRADING_STREAM_URL=https://fc-tradehub.ssi.com.vn/

# Authentication Configuration
TRADING_TWO_FA_TYPE=1
TRADING_NOTIFY_ID=-1

# Account Configuration (for testing)
TRADING_DEFAULT_ACCOUNT_ID=your_account_id_here
TRADING_ACCOUNT_TYPE=VNDS
TRADING_ACCOUNT_CURRENCY=VND

# Security Configuration
TRADING_SECRET_KEY=your-very-secure-secret-key-at-least-32-characters-long
TRADING_ALGORITHM=HS256
TRADING_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
TRADING_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
TRADING_ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
TRADING_ALLOWED_HEADERS=["*"]

# Logging Configuration
TRADING_LOG_LEVEL=INFO
TRADING_LOG_JSON=true
TRADING_LOG_FILE=logs/app.log

# Rate Limiting
TRADING_RATE_LIMIT_REQUESTS=100
TRADING_RATE_LIMIT_WINDOW=60

# Database Configuration
TRADING_DATABASE_URL=postgresql://trading_user:secure_password@localhost:5432/trading_db
TRADING_DATABASE_POOL_SIZE=5
TRADING_DATABASE_ECHO=false

# Redis Configuration
TRADING_REDIS_URL=redis://localhost:6379
TRADING_REDIS_DB=0
TRADING_REDIS_PASSWORD=
TRADING_REDIS_MAX_CONNECTIONS=10

# Kafka Configuration
TRADING_KAFKA_BOOTSTRAP_SERVERS=["localhost:9092"]
TRADING_KAFKA_TOPIC_PREFIX=trading

# HTTP Client Configuration
TRADING_HTTP_TIMEOUT=30
TRADING_HTTP_MAX_CONNECTIONS=20
TRADING_HTTP_RETRIES=3

# Circuit Breaker Configuration
TRADING_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
TRADING_CIRCUIT_BREAKER_TIMEOUT=60

# Monitoring Configuration
TRADING_ENABLE_METRICS=true
TRADING_METRICS_PORT=9090

# Feature Flags
TRADING_ENABLE_TRADING=true
TRADING_ENABLE_REAL_API=false
TRADING_ENABLE_AUDIT_LOGGING=true
TRADING_ENABLE_PERFORMANCE_LOGGING=true
WORKERS=4

# FC Trading Configuration
CONSUMER_ID=your_consumer_id_here
CONSUMER_SECRET=your_consumer_secret_here
PRIVATE_KEY=your_private_key_here
URL=https://fc-tradeapi.ssi.com.vn/
STREAM_URL=https://fc-tradehub.ssi.com.vn/
TWO_FA_TYPE=0
NOTIFY_ID=-1

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["https://yourdomain.com"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

